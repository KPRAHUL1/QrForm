generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Registration {
  id            String   @id @default(uuid())
  fullName      String
  email         String
  phone         String
  collegeName   String
  department    String
  year          String
  paymentMode   String
  paymentProof  String
 extraFields Json? @default("[]")
  createdAt     DateTime @default(now())
}

